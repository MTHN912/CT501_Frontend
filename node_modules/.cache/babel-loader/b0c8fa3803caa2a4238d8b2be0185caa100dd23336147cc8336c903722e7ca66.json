{"ast":null,"code":"import { ref } from \"vue\";\nimport { useRouter } from \"vue-router\";\nimport axios from \"axios\";\nexport default {\n  __name: 'Register',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const registerForm = ref({\n      fullname: \"\",\n      email: \"\",\n      username: \"\",\n      password: \"\",\n      confirmPassword: \"\"\n    });\n    const otp = ref(\"\");\n    const showOTP = ref(false);\n    const isPasswordVisible = ref(false);\n    const isConfirmPasswordVisible = ref(false);\n    const router = useRouter();\n    const handleSubmit = async () => {\n      if (registerForm.value.password === registerForm.value.confirmPassword && registerForm.value.username && registerForm.value.email && registerForm.value.fullname) {\n        try {\n          // Call API to register user\n          const response = await axios.post(\"http://localhost:3000/user/register\", registerForm.value);\n          console.log(response.data.message);\n\n          // Show OTP field after successful registration\n          showOTP.value = true;\n        } catch (error) {\n          console.error(\"Registration error:\", error.response.data);\n          alert(error.response.data.errors?.general || \"Đăng ký thất bại\");\n        }\n      } else {\n        alert(\"Vui lòng nhập đầy đủ thông tin và đảm bảo mật khẩu khớp nhau\");\n      }\n    };\n    const verifyOTP = async () => {\n      try {\n        // Call API to verify OTP and activate user\n        const response = await axios.post(\"http://localhost:3000/user/verifyOTPAndActivateUser\", {\n          email: registerForm.value.email,\n          otp: otp.value\n        });\n        alert(\"Kích hoạt thành công!\");\n        router.push(\"/login\");\n      } catch (error) {\n        console.error(\"OTP verification error:\", error.response.data);\n        alert(error.response.data.errors?.otp || \"Mã OTP không chính xác hoặc đã hết hạn\");\n      }\n    };\n    const togglePasswordVisib