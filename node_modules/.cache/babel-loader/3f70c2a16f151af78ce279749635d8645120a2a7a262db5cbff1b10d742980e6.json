splay: flex;\n  align-items: center;\n  margin: 10px 0;\n}\n\n.star {\n  color: #ddd;\n  font-size: 1.5rem;\n  margin-right: 5px;\n}\n\n.star.filled {\n  color: gold;\n}\n\n.favorite-button {\n  background-color: transparent;\n  border: none;\n  cursor: pointer;\n  font-size: 1.2rem;\n  color: #ff6666;\n  display: flex;\n  align-items: center;\n  margin-bottom: 20px;\n}\n\n.favorite-button i {\n  margin-right: 5px;\n}\n\n.select-button {\n  background-color: #ff6600;\n  color: white;\n  padding: 10px 20px;\n  border: none;\n  border-radius: 8px;\n  cursor: pointer;\n  font-size: 1.2rem;\n  transition: background-color 0.3s;\n}\n\n.select-button:hover {\n  background-color: #ff4500;\n}\n</style>\n"],"mappings":"AAwCA,eAAe;EACbA,IAAI,EAAE,YAAY;EAClBC,KAAK,EAAE,CAAC,IAAI,CAAC;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE;IACR,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,MAAMC,MAAK,GAAI,IAAI,CAACC,EAAE;IACtB,MAAMC,MAAK,GAAI,CACb;MACED,EAAE,EAAE,CAAC;MACLN,IAAI,EAAE,QAAQ;MACdQ,QAAQ,EAAE,4CAA4C;MACtDC,WAAW,EAAE,eAAe;MAC5BC,KAAK,EAAE,kBAAkB;MACzBC,MAAM,EAAE,GAAG;MACXC,YAAY,EAAE,GAAG;MACjBC,KAAK,EACH,6HAA6H;MAC/HC,QAAQ,EAAE;IACZ;IACA;IAAA,CACD;IAED,IAAI,CAACX,IAAG,GAAII,MAAM,CAACQ,IAAI,CAAEZ,IAAI,IAAKA,IAAI,CAACG,EAAC,KAAMU,QAAQ,CAACX,MAAM,CAAC,CAAC;EACjE,CAAC;EACDY,OAAO,EAAE;IACPC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACf,IAAI,CAACW,QAAO,GAAI,CAAC,IAAI,CAACX,IAAI,CAACW,QAAQ;IAC1C,CAAC;IACDK,UAAUA,CAAA,EAAG;MACXC,KAAK,CAAC,mBAAmB,IAAI,CAACjB,IAAI,CAACH,IAAI,EAAE,CAAC;IAC5C;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}