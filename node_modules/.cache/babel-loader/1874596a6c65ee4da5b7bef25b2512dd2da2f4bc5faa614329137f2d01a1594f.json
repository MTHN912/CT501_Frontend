login-container\">\n    <a-form\n      :model=\"loginForm\"\n      :rules=\"rules\"\n      ref=\"loginFormRef\"\n      class=\"login-form\"\n    >\n      <a-form-item name=\"username\">\n        <a-input\n          v-model=\"loginForm.username\"\n          prefix-icon=\"user\"\n          placeholder=\"Tên đăng nhập\"\n        />\n      </a-form-item>\n\n      <a-form-item name=\"password\">\n        <a-input-password\n          v-model=\"loginForm.password\"\n          prefix-icon=\"lock\"\n          placeholder=\"Mật khẩu\"\n          visibilityToggle\n        />\n      </a-form-item>\n\n      <a-form-item>\n        <a-checkbox v-model=\"loginForm.remember\">Ghi nhớ</a-checkbox>\n        <router-link to=\"/forgot-password\" class=\"login-form-forgot\">\n          Quên mật khẩu?\n        </router-link>\n        <a-button\n          type=\"primary\"\n          html-type=\"submit\"\n          class=\"login-form-button\"\n          @click=\"handleSubmit\"\n        >\n          Đăng nhập\n        </a-button>\n        <div class=\"register-link\">\n          Hoặc <router-link to=\"/register\">đăng ký ngay!</router-link>\n        </div>\n      </a-form-item>\n    </a-form>\n  </div>\n</template>\n\n<script setup>\nimport { ref } from 'vue';\nimport { useRouter } from 'vue-router';\nimport { Form } from 'ant-design-vue';\n\nconst loginForm = ref({\n  username: '',\n  password: '',\n  remember: false,\n});\n\nconst rules = {\n  username: [\n    { required: true, message: 'Vui lòng nhập tên đăng nhập', trigger: 'blur' },\n  ],\n  password: [\n    { required: true, message: 'Vui lòng nhập mật khẩu', trigger: 'blur' },\n  ],\n};\n\nconst loginFormRef = ref(null);\nconst router = useRouter();\nconst { validate } = Form.useForm(loginFormRef);  // Sử dụng useForm\n\nconst handleSubmit = () => {\n  validate().then(() => {\n    // Xử lý logic đăng nhập ở đây\n    console.log('Tên đăng nhập:', loginForm.value.username);\n    console.log('Mật khẩu:', loginForm.value.password);\n    \