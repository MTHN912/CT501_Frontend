{"ast":null,"code":"export default {\n  data() {\n    return {\n      selectedTab: 'all',\n      reviews: [\n      // Dữ liệu đánh giá mẫu\n      {\n        id: 1,\n        username: 'NguyenThuyAnhDuongCute',\n        rating: 5,\n        date: '2023-11-08',\n        comment: 'Hàng OK giao rất nhanh...',\n        images: ['/images/review1.png', '/images/review2.png']\n      }, {\n        id: 2,\n        username: 'TranVanA',\n        rating: 4,\n        date: '2023-09-15',\n        comment: 'Sản phẩm đúng như mô tả...',\n        images: []\n      }, {\n        id: 3,\n        username: 'LeThiB',\n        rating: 3,\n        date: '2023-08-10',\n        comment: 'Chất lượng ổn, giá hợp lý...',\n        images: []\n      }]\n    };\n  },\n  computed: {\n    averageRating() {\n      const totalStars = this.reviews.reduce((total, review) => total + review.rating, 0);\n      return (totalStars / this.reviews.length).toFixed(1);\n    },\n    totalReviews() {\n      return this.reviews.length;\n    },\n    filteredReviews() {\n      if (this.selectedTab === 'all') {\n        return this.reviews;\n      }\n      return this.reviews.filter(review => review.rating === this.selectedTab);\n    }\n  }\n};","map":{"version":3,"names":["data","selectedTab","reviews","id","username","rating","date","comment","images","computed","averageRating","totalStars","reduce","total","review","length","toFixed","totalReviews","filteredReviews","filter"],"sources":["D:\\Tiểu Luận Tốt Nghiệp\\Frontend\\src\\components\\Menu\\ReviewSection.vue"],"sourcesContent":["<template>\n    <div class=\"review-container\">\n      <!-- Tổng quan đánh giá -->\n      <div class=\"review-summary\">\n        <h2>Đánh giá sản phẩm</h2>\n        <div class=\"rating-overview\">\n          <div class=\"average-rating\">\n            <h2>{{ averageRating }} trên 5</h2>\n            <div class=\"stars\">\n              <span v-for=\"n in 5\" :key=\"n\" class=\"star\" :class=\"{ filled: n <= averageRating }\">★</span>\n            </div>\n            <p>({{ totalReviews }} đánh giá)</p>\n          </div>\n        </div>\n      </div>\n  \n      <!-- Tab chọn số sao -->\n      <div class=\"tabs\">\n        <button :class=\"{ active: selectedTab === 'all' }\" @click=\"selectedTab = 'all'\">Tất cả</button>\n        <button :class=\"{ active: selectedTab === 5 }\" @click=\"selectedTab = 5\">5 Sao</button>\n        <button :class=\"{ active: selectedTab === 4 }\" @click=\"selectedTab = 4\">4 Sao</button>\n        <button :class=\"{ active: selectedTab === 3 }\" @click=\"selectedTab = 3\">3 Sao</button>\n        <button :class=\"{ active: selectedTab === 2 }\" @click=\"selectedTab = 2\">2 Sao</button>\n        <button :class=\"{ active: selectedTab === 1 }\" @click=\"selectedTab = 1\">1 Sao</button>\n      </div>\n  \n      <!-- Danh sách đánh giá -->\n      <div v-if=\"filteredReviews.length > 0\" class=\"reviews\">\n        <div v-for=\"review in filteredReviews\" :key=\"review.id\" class=\"review-item\">\n          <div class=\"review-header\">\n            <h4>{{ review.username }}</h4>\n            <div class=\"review-rating\">\n              <span v-for=\"n in 5\" :key=\"n\" class=\"star\" :class=\"{ filled: n <= review.rating }\">★</span>\n            </div>\n            <p class=\"review-date\">{{ review.date }}</p>\n          </div>\n          <p>{{ review.comment }}</p>\n  \n          <!-- Hình ảnh review -->\n          <div v-if=\"review.images && review.images.length > 0\" class=\"review-images\">\n            <img v-for=\"image in review.images\" :src=\"image\" :alt=\"'Review image'\" class=\"review-image\"/>\n          </div>\n        </div>\n      </div>\n      <p v-else>Không có đánh giá nào cho tab này.</p>\n    </div>\n  </template>\n  \n  <script>\n  export default {\n    data() {\n      return {\n        selectedTab: 'all',\n        reviews: [\n          // Dữ liệu đánh giá mẫu\n          { id: 1, username: 'NguyenThuyAnhDuongCute', rating: 5, date: '2023-11-08', comment: 'Hàng OK giao rất nhanh...', images: ['/images/review1.png', '/images/review2.png'] },\n          { id: 2, username: 'TranVanA', rating: 4, date: '2023-09-15', comment: 'Sản phẩm đúng như mô tả...', images: [] },\n          { id: 3, username: 'LeThiB', rating: 3, date: '2023-08-10', comment: 'Chất lượng ổn, giá hợp lý...', images: [] }\n        ],\n      };\n    },\n    computed: {\n      averageRating() {\n        const totalStars = this.reviews.reduce((total, review) => total + review.rating, 0);\n        return (totalStars / this.reviews.length).toFixed(1);\n      },\n      totalReviews() {\n        return this.reviews.length;\n      },\n      filteredReviews() {\n        if (this.selectedTab === 'all') {\n          return this.reviews;\n        }\n        return this.reviews.filter(review => review.rating === this.selectedTab);\n      }\n    }\n  };\n  </script>\n  \n  <style scoped>\n  .review-container {\n    max-width: 900px;\n    margin: 0 auto;\n    padding: 20px;\n    background-color: white;\n    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);\n    border-radius: 8px;\n  }\n  .review-summary {\n    text-align: center;\n    margin-bottom: 20px;\n  }\n  .average-rating h2 {\n    font-size: 2rem;\n    font-weight: bold;\n  }\n  .stars {\n    display: flex;\n    justify-content: center;\n    margin: 10px 0;\n  }\n  .star {\n    font-size: 1.5rem;\n    color: #ddd;\n    margin-right: 5px;\n  }\n  .star.filled {\n    color: gold;\n  }\n  .tabs {\n    display: flex;\n    justify-content: center;\n    margin-bottom: 20px;\n  }\n  .tabs button {\n    padding: 10px 20px;\n    border: none;\n    background-color: #f1f1f1;\n    cursor: pointer;\n    margin-right: 5px;\n    transition: background-color 0.3s;\n  }\n  .tabs button.active, .tabs button:hover {\n    background-color: #ff6600;\n    color: white;\n  }\n  .reviews {\n    display: flex;\n    flex-direction: column;\n  }\n  .review-item {\n    display: flex;\n    flex-direction: column;\n    padding: 15px 0;\n    border-bottom: 1px solid #eee;\n    gap: 10px;\n  }\n  .review-header {\n    display: flex;\n    justify-content: space-between;\n    align-items: center;\n    width: 100%;\n  }\n  .review-header h4 {\n    font-size: 1.2rem;\n    margin: 0;\n    flex: 1;\n  }\n  .review-rating {\n    display: flex;\n    justify-content: flex-start;\n    flex: 1;\n    gap: 3px;\n  }\n  .review-date {\n    color: #aaa;\n    font-size: 0.9rem;\n    text-align: right;\n    flex: 1;\n  }\n  .review-images {\n    display: flex;\n    gap: 10px;\n    flex-wrap: wrap;\n  }\n  .review-image {\n    width: 100px;\n    height: 100px;\n    object-fit: cover;\n    border-radius: 5px;\n    flex-shrink: 0;\n  }\n  </style>\n  "],"mappings":"AAiDE,eAAe;EACbA,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,WAAW,EAAE,KAAK;MAClBC,OAAO,EAAE;MACP;MACA;QAAEC,EAAE,EAAE,CAAC;QAAEC,QAAQ,EAAE,wBAAwB;QAAEC,MAAM,EAAE,CAAC;QAAEC,IAAI,EAAE,YAAY;QAAEC,OAAO,EAAE,2BAA2B;QAAEC,MAAM,EAAE,CAAC,qBAAqB,EAAE,qBAAqB;MAAE,CAAC,EAC1K;QAAEL,EAAE,EAAE,CAAC;QAAEC,QAAQ,EAAE,UAAU;QAAEC,MAAM,EAAE,CAAC;QAAEC,IAAI,EAAE,YAAY;QAAEC,OAAO,EAAE,4BAA4B;QAAEC,MAAM,EAAE;MAAG,CAAC,EACjH;QAAEL,EAAE,EAAE,CAAC;QAAEC,QAAQ,EAAE,QAAQ;QAAEC,MAAM,EAAE,CAAC;QAAEC,IAAI,EAAE,YAAY;QAAEC,OAAO,EAAE,8BAA8B;QAAEC,MAAM,EAAE;MAAG;IAEpH,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,aAAaA,CAAA,EAAG;MACd,MAAMC,UAAS,GAAI,IAAI,CAACT,OAAO,CAACU,MAAM,CAAC,CAACC,KAAK,EAAEC,MAAM,KAAKD,KAAI,GAAIC,MAAM,CAACT,MAAM,EAAE,CAAC,CAAC;MACnF,OAAO,CAACM,UAAS,GAAI,IAAI,CAACT,OAAO,CAACa,MAAM,EAAEC,OAAO,CAAC,CAAC,CAAC;IACtD,CAAC;IACDC,YAAYA,CAAA,EAAG;MACb,OAAO,IAAI,CAACf,OAAO,CAACa,MAAM;IAC5B,CAAC;IACDG,eAAeA,CAAA,EAAG;MAChB,IAAI,IAAI,CAACjB,WAAU,KAAM,KAAK,EAAE;QAC9B,OAAO,IAAI,CAACC,OAAO;MACrB;MACA,OAAO,IAAI,CAACA,OAAO,CAACiB,MAAM,CAACL,MAAK,IAAKA,MAAM,CAACT,MAAK,KAAM,IAAI,CAACJ,WAAW,CAAC;IAC1E;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}