{"ast":null,"code":"import axios from \"axios\";\nimport { ref } from \"vue\";\nimport { useRouter } from \"vue-router\";\nexport default {\n  __name: 'Register',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const registerForm = ref({\n      fullname: \"\",\n      email: \"\",\n      username: \"\",\n      password: \"\",\n      confirmPassword: \"\",\n      otp: \"\"\n    });\n    const isPasswordVisible = ref(false);\n    const showOtpField = ref(false);\n    const router = useRouter();\n    const handleRegister = async () => {\n      if (registerForm.value.password === registerForm.value.confirmPassword && registerForm.value.username && registerForm.value.email && registerForm.value.fullname) {\n        try {\n          // Call the registration API\n          await axios.post(\"http://localhost:3000/user/register\", {\n            FULLNAME: registerForm.value.fullname,\n            EMAIL: registerForm.value.email,\n            USERNAME: registerForm.value.username,\n            PASSWORD: registerForm.value.password\n          });\n\n          // After successful registration, show the OTP field\n          showOtpField.value = true;\n        } catch (error) {\n          alert(\"Đăng ký thất bại, vui lòng thử lại.\");\n        }\n      } else {\n        alert(\"Vui lòng nhập đầy đủ thông tin và đảm bảo mật khẩu khớp nhau\");\n      }\n    };\n    const handleOtpVerification = async () => {\n      try {\n        const response = await axios.post(\"http://localhost:3000/user/verifyOTPAndActivateUser\", {\n          OTP: registerForm.value.otp,\n          EMAIL: registerForm.value.email\n        });\n        if (response.data.success) {\n          alert(\"Đăng ký thành công!\");\n          router.push(\"/login\");\n        } else {\n          alert(\"Mã OTP không chính xác, vui lòng thử lại.\");\n        }\n      } catch (error) {\n        alert(\"Xác thực OTP thất bại, vui lòng thử lại.\");\n      }\n    };\n    const togglePasswordVisibility = () => {\n      isPasswordVisible.value = !isPasswordVisible.value;\n    };\n    const handleFacebookLogin = () => {\n      console.log(\"Login with Facebook\");\n      // Add Facebook login logic here\n    };\n    const handleGoogleLogin = () => {\n      console.log(\"Login with Google\");\n      // Add Google login logic here\n    };\n    const __returned__ = {\n      registerForm,\n      isPasswordVisible,\n      showOtpField,\n      router,\n      handleRegister,\n      handleOtpVerification,\n      togglePasswordVisibility,\n      handleFacebookLogin,\n      handleGoogleLogin,\n      get axios() {\n        return axios;\n      },\n      ref,\n      get useRouter() {\n        return useRouter;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["axios","ref","useRouter","registerForm","fullname","email","username","password","confirmPassword","otp","isPasswordVisible","showOtpField","router","handleRegister","value","post","FULLNAME","EMAIL","USERNAME","PASSWORD","error","alert","handleOtpVerification","response","OTP","data","success","push","togglePasswordVisibility","handleFacebookLogin","console","log","handleGoogleLogin"],"sources":["D:/Tiểu Luận Tốt Nghiệp/Frontend/src/components/Login-Logout/Register.vue"],"sourcesContent":["<template>\n  <div class=\"register-container\">\n    <h2 class=\"register-title\">Đăng Ký</h2>\n\n    <form @submit.prevent=\"handleRegister\" class=\"register-form\">\n      <div class=\"form-row\">\n        <div class=\"form-group\">\n          <input\n            type=\"text\"\n            id=\"fullname\"\n            v-model=\"registerForm.fullname\"\n            placeholder=\"Họ và tên\"\n            required\n          />\n        </div>\n        <div class=\"form-group\">\n          <input\n            type=\"email\"\n            id=\"email\"\n            v-model=\"registerForm.email\"\n            placeholder=\"Email\"\n            required\n          />\n        </div>\n      </div>\n\n      <div class=\"form-row\">\n        <div class=\"form-group\">\n          <input\n            type=\"text\"\n            id=\"username\"\n            v-model=\"registerForm.username\"\n            placeholder=\"Tên tài khoản\"\n            required\n          />\n        </div>\n        <div class=\"form-group\">\n          <input\n            :type=\"isPasswordVisible ? 'text' : 'password'\"\n            id=\"password\"\n            v-model=\"registerForm.password\"\n            placeholder=\"Mật khẩu\"\n            required\n          />\n          <span class=\"toggle-password\" @click=\"togglePasswordVisibility\">\n            <font-awesome-icon\n              :icon=\"isPasswordVisible ? 'eye-slash' : 'eye'\"\n            />\n          </span>\n        </div>\n      </div>\n\n      <div class=\"form-row\" v-if=\"showOtpField\">\n        <div class=\"form-group full-width\">\n          <input\n            type=\"text\"\n            id=\"otp\"\n            v-model=\"registerForm.otp\"\n            placeholder=\"Nhập mã OTP\"\n            required\n          />\n        </div>\n      </div>\n\n      <button\n        type=\"submit\"\n        class=\"btn-submit\"\n        v-if=\"!showOtpField\"\n      >\n        Đăng ký\n      </button>\n\n      <button\n        type=\"button\"\n        class=\"btn-submit\"\n        v-if=\"showOtpField\"\n        @click=\"handleOtpVerification\"\n      >\n        Xác thực\n      </button>\n\n      <div class=\"divider\">HOẶC</div>\n\n      <div class=\"social-login\" v-if=\"!showOtpField\">\n        <button\n          type=\"button\"\n          class=\"btn-social btn-facebook\"\n          @click=\"handleFacebookLogin\"\n        >\n          Facebook\n        </button>\n        <button\n          type=\"button\"\n          class=\"btn-social btn-google\"\n          @click=\"handleGoogleLogin\"\n        >\n          Google\